<!-- views/chat.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chatroom</title>
</head>
<body>
  <h1>Welcome to the Lobby, <%= username %>!</h1>
  <ul id="messages"></ul>
  <form id="chatForm" action="">
    <input id="input" autocomplete="off" placeholder="Type your message" required />
    <button type="submit">Send</button>
  </form>

  <form action="/user/set-username" method="post">
    <label for="username">Enter your username:</label>
    <input type="text" id="username" name="username" required>
    <button type="submit">Set Username</button>
  </form>

  <div>Lobby Code: <%= lobby %> </div>
  <Div>Username: <%= username %> </Div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script>
    $(function () {
      const socket = io();
      $('#chatForm').submit(function(){
        const message = $('#input').val();
        socket.emit('chat message', { username: '<%= username %>', message: message });
        $('#input').val('');

        socket.emit('test');


        return false;
      });

      socket.on('chat message2', function(data){
        console.log('testing');
        $('#messages').append($('<li>').text(data.username + ': ' + data.message));
      });


      
  
    });
  </script>
</body>
</html>
